        }
    ],
    "version": "0.0.1",
    "repository": "git@github.com:palmstar/palmstar.github.io.git",
    "devDependencies": {
        "axios": "^0.19.0",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.0.6",
        "concurrently": "^4.1.0",
        "css-loader": "^2.1.1",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.17.3",
        "eslint-plugin-vue": "^5.2.2",
        "file-loader": "^3.0.1",
        "filemanager-webpack-plugin": "^2.0.5",
        "husky": "^2.3.0",
        "image-webpack-loader": "^4.6.0",
        "lint-staged": "^8.1.7",
        "mini-css-extract-plugin": "^0.7.0",
        "node-sass": "^4.12.0",
        "normalize.css": "^8.0.1",
        "npm": "^6.11.3",
        "sass-loader": "^7.1.0",
        "sass-resources-loader": "^2.0.1",
        "style-loader": "^0.23.1",
        "stylelint": "^10.0.1",
        "stylelint-declaration-strict-value": "^1.1.3",
        "stylelint-order": "^3.0.0",
        "vue": "^2.6.10",
        "vue-loader": "^15.7.0",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.32.2",
        "webpack-cli": "^3.3.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "webpack.config.js": [
            "eslint",
            "git add"
        ],
        "_source/**/*.js": [
            "eslint",
            "git add"
        ],
        "_source/**/*.scss": [
            "stylelint --syntax scss",
            "git add"
        ],
        "_source/**/*.vue": [
            "eslint",
            "stylelint",
            "git add"
        ]
    },
    "scripts": {
        "dev": "concurrently \"jekyll clean\" \"NODE_ENV='development' webpack -w --config=webpack.config.js --display-error-details --colors\" \"JEKYLL_ENV=development bundle exec jekyll serve --watch --incremental\"",
        "build": "NODE_ENV='production' webpack --config=webpack.config.js --display-error-details --progress --colors",
        "deploy": ". ./deploy.sh",
        "eslint": "eslint \"**/*\"; exit 0"
    }
}
