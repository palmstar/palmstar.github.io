    "version": "0.0.1",
    "repository": "git@github.com:palmstar/palmstar.github.io.git",
    "devDependencies": {
        "axios": "^0.20.0",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.1.0",
        "concurrently": "^5.3.0",
        "css-loader": "^3.6.0",
        "eslint": "^7.8.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-vue": "^6.2.2",
        "file-loader": "^6.1.0",
        "filemanager-webpack-plugin": "^2.0.5",
        "husky": "^4.2.5",
        "image-webpack-loader": "^6.0.0",
        "lint-staged": "^10.2.13",
        "mini-css-extract-plugin": "^1.3.9",
        "node-sass": "^5.0.0",
        "normalize.css": "^8.0.1",
        "npm": "^6.14.8",
        "sass-loader": "^10.0.0",
        "sass-resources-loader": "^2.1.0",
        "style-loader": "^1.2.1",
        "stylelint": "^13.7.0",
        "stylelint-declaration-strict-value": "^1.5.0",
        "stylelint-order": "^4.1.0",
        "vue": "^2.6.12",
        "vue-glide-js": "^1.3.14",
        "vue-loader": "^15.9.3",
        "vue-template-compiler": "^2.6.12",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "webpack.config.js": [
            "eslint"
        ],
        "_source/**/*.js": [
            "eslint"
        ],
        "_source/**/*.scss": [
            "stylelint --syntax scss"
        ],
        "_source/**/*.vue": [
            "eslint",
            "stylelint"
        ]
    },
    "scripts": {
        "dev": "concurrently \"jekyll clean\" \"NODE_ENV='development' webpack -w --config=webpack.config.js --display-error-details --colors\" \"JEKYLL_ENV=development bundle exec jekyll serve --watch --incremental\"",
        "build": "NODE_ENV='production' webpack --config=webpack.config.js --display-error-details --progress --colors",
        "deploy": ". ./deploy.sh",
        "eslint": "eslint \"**/*\"; exit 0"
    }
}
