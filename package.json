    "dependencies": {},
    "devDependencies": {
        "axios": "^0.19.2",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.1.0",
        "concurrently": "^5.2.0",
        "css-loader": "^3.5.3",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-vue": "^6.2.2",
        "file-loader": "^6.0.0",
        "filemanager-webpack-plugin": "^2.0.5",
        "husky": "^4.2.5",
        "image-webpack-loader": "^6.0.0",
        "lint-staged": "^10.2.0",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.14.0",
        "normalize.css": "^8.0.1",
        "npm": "^6.14.4",
        "sass-loader": "^8.0.2",
        "sass-resources-loader": "^2.0.3",
        "style-loader": "^1.2.1",
        "stylelint": "^13.3.3",
        "stylelint-declaration-strict-value": "^1.4.2",
        "stylelint-order": "^4.0.0",
        "vue": "^2.6.11",
        "vue-loader": "^15.9.1",
        "vue-template-compiler": "^2.6.11",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "webpack.config.js": [
            "eslint"
        ],
        "_source/**/*.js": [
            "eslint"
        ],
        "_source/**/*.scss": [
            "stylelint --syntax scss"
        ],
        "_source/**/*.vue": [
            "eslint",
            "stylelint"
        ]
    },
    "scripts": {
        "dev": "concurrently \"jekyll clean\" \"NODE_ENV='development' webpack -w --config=webpack.config.js --display-error-details --colors\" \"JEKYLL_ENV=development bundle exec jekyll serve --watch --incremental\"",
        "build": "NODE_ENV='production' webpack --config=webpack.config.js --display-error-details --progress --colors",
        "deploy": ". ./deploy.sh",
        "eslint": "eslint \"**/*\"; exit 0"
    }
}
